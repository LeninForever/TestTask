@using Microsoft.AspNetCore.Mvc.TagHelpers
@model TestTask.DAL.StudyGroup

<!DOCTYPE html>

<html>
<head>
    <title>title</title>
</head>
<body>
<div class="container mt-3">
      <h2>Создать учебную группу</h2>
    <div class="navigation__links my-4">
        <span> @Html.RouteLink("Учебные группы", new { controller = "Groups", action = "Index" }) / Добавить учебную группу</span>
    </div>
    <form method="post" class="col-6">
        <p>
            <label for="teacherId">Выберите учителя:</label>
            <select class="form-select mt-3" name="teacherId">
                @foreach (var teacher in ViewBag.Teachers)
                {
                    <option value="@teacher.Id">@teacher.Fio</option>
                }
            </select>
            <label for="studyGroupName" class="mt-3" asp-for="StudyGroupName">Названия группы</label>
            <input type="text" class="form-control" name="studyGroupName" asp-for="StudyGroupName">
            <span asp-validation-for="StudyGroupName"></span>

        </p>
        <p>
            <input type="submit" class="btn btn-outline-primary" value="Добавить"/>
        </p>
    </form>
</div>
</body>
<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>
</html>